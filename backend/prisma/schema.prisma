generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Art {
  id String @id @default(cuid())
  likes Int @default(0)
  commands Json
  user User @relation(fields: [userId], references: [id])
  userId String
}

model User {
  id String @id @default(cuid())
  username String
  clerkId String@unique
  Arts Art[]
}

model Like {
  id String @id @default(cuid())
  artId String
  userId String
}

